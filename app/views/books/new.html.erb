<h2>New book</h2>

<%= form_with model: @book do |f| %>

  <div class="field">
    <label for="book-title">Title</label>
    <%= f.text_field:title %>
  </div>

  <div class="field">
    <label for="book-body">Body</label>
    <%= f.text_area:body %>
  </div>

  <div class="actions">
    <%= f.submit:"create book" %>
  </label>
<% end %>
